<%- include('./head'); %>
<body>
    <%- include('./top'); %>
    <div id="content">
        <% if (error) { %>
            <div class="error">
                <p><%= error %></p>
            </div>
        <% } %>
        <% if (success) { %>
            <div class="success">
                <p><%= success %></p>
            </div>
        <% } %>
        <div class="addForm">
            <h2>Your code for app:</h2>
            <input type="text" disabled value="<%= apiKey %>">
            <script src="/qrcode.min.js"></script>
            <div id="qrcode"></div>
            <script type="text/javascript">
            var qrcode = new QRCode(document.getElementById("qrcode"), {
                text: "<%= apiKey %>",
                width: 300,
                height: 300,
                colorDark : "#000000",
                colorLight : "#ffffff",
                correctLevel : QRCode.CorrectLevel.L
            });
            </script>
            <div id="warningZone">
                <h2>Generate new API key for app</h2>
                <form action="/panel/api" method="POST">
                    <table>
                        <tr>
                            <td>
                                <input type="hidden" name="action" value="reset">
                                <button type="submit" style="width: 100%;">Reset API key</button>
                            </td>
                        </tr>
                    </table>
                </form>
            </div>
        </div>
    </div>

    <%- include('footer'); %>